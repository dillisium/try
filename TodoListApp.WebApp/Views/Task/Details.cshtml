@model TodoListApp.WebApp.Models.TaskViewModel

<h1>Task Details</h1>

<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Due Date</dt>
    <dd class="col-sm-10">@Model.DueDate.ToShortDateString()</dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status</dd>

    <dt class="col-sm-2">Is Overdue</dt>
    <dd class="col-sm-10">@Model.IsOverdue</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> |
<a asp-action="Details" asp-controller="ToDoListMvc" asp-route-id="@Model.ToDoListId" class="btn btn-secondary">Back to List</a>
