@model IEnumerable<TodoListApp.WebApp.Models.TaskViewModel>

<h3>Tasks</h3>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr class="@(task.IsOverdue ? "table-danger" : "")">
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.DueDate.ToShortDateString()</td>
                <td>@task.Status</td>
            </tr>
        }
    </tbody>
</table>
