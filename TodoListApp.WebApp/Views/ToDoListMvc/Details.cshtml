@using TodoListApp.WebApp.Models

@model ToDoListViewModel

<h1>Details</h1>

<div>
    <h4>To-Do List</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
